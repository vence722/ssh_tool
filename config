<?xml version="1.0" encoding="UTF-8"?>
<SSHConfig>
     
  <!-- hosts definition section -->
  <Hosts>
    <Host>
      <Hostname>54.64.91.5</Hostname>
      <User>vence</User>
      <Password>peggy2015</Password>
    </Host>
  </Hosts>

  <!-- commands definition section -->
  <Commands>
	<!-- commands for multiple hosts -->
	<Command>
	  <Hostname>54.64.91.5</Hostname>
	  <Line>cd /tmp/</Line>
	  <Line>mkdir test</Line>
	  <Line>ls -l</Line>
	</Command>
	<!-- commands for all hosts -->
	<Command>
	  <Hostname>*</Hostname>
	  <Line>echo "Access to the host via SSH!"</Line>
	</Command>
  </Commands>

</SSHConfig>